#!/usr/bin/make -f

export JAVA_HOME?=/usr/lib/jvm/java-1.7.0-openjdk-amd64
export PREFIX=/usr
export SYSCONFDIR=/etc/kafka
export VERSION=0.10.2.1

# Put build dependency jars here.
export CLASSPATH=/usr/share/java/asm3.jar:/usr/share/java/cglib3.jar:/usr/share/java/commons-cli.jar:/usr/share/java/commons-codec.jar:/usr/share/java/commons-compress.jar:/usr/share/java/commons-el.jar:/usr/share/java/commons-httpclient.jar:/usr/share/java/commons-io.jar:/usr/share/java/commons-lang.jar:/usr/share/java/commons-logging.jar:/usr/share/java/commons-net.jar:/usr/share/java/hsqldb.jar:/usr/share/java/jackson-core.jar:/usr/share/java/jackson-mapper.jar:/usr/share/java/jets3t.jar:/usr/share/java/jetty-util.jar:/usr/share/java/jetty.jar:/usr/share/java/joda-time.jar:/usr/share/java/jsp-api-2.1.jar:/usr/share/java/junit4.jar:/usr/share/java/log4j-1.2.jar:/usr/share/java/objenesis.jar:/usr/share/java/oro.jar:/usr/share/java/qdox.jar:/usr/share/java/servlet-api-2.5.jar:/usr/share/java/velocity-1.7.jar:/usr/share/java/zookeeper.jar:$(CURDIR)/debian/lib/avro-1.4.0.jar:$(CURDIR)/debian/lib/commons-collections-2.1.1.jar.jar:$(CURDIR)/debian/lib/easymock-3.0.jar:$(CURDIR)/debian/lib/hadoop-core-0.20.2.jar:$(CURDIR)/debian/lib/jasper-compiler-5.5.12.jar:$(CURDIR)/debian/lib/jasper-runtime-5.5.12.jar:$(CURDIR)/debian/lib/jopt-simple-5.0.3.jar:$(CURDIR)/debian/lib/jsp-2.1-6.1.14.jar:$(CURDIR)/debian/lib/jsp-api-2.1-6.1.14.jar:$(CURDIR)/debian/lib/kfs-0.3.jar:$(CURDIR)/debian/lib/lz4-1.3.0.jar:$(CURDIR)/debian/lib/metrics-annotation-2.2.0.jar:$(CURDIR)/debian/lib/metrics-core-2.2.0.jar:$(CURDIR)/debian/lib/metrics-ganglia-2.2.0.jar:$(CURDIR)/debian/lib/metrics-graphite-2.2.0.jar:$(CURDIR)/debian/lib/paranamer-ant-2.2.jar:$(CURDIR)/debian/lib/paranamer-generator-2.2.jar:$(CURDIR)/debian/lib/paranamer-2.1.jar:$(CURDIR)/debian/lib/pig-0.8.0.jar:$(CURDIR)/debian/lib/piggybank-0.12.0.jar:$(CURDIR)/debian/lib/scala-library-2.11.8.jar:$(CURDIR)/debian/lib/scala-parser-combinators_2.11-1.0.4.jar:$(CURDIR)/debian/lib/scalatest-1.2.jar:$(CURDIR)/debian/lib/slf4j-api-1.7.6.jar:$(CURDIR)/debian/lib/slf4j-simple-1.7.6.jar:$(CURDIR)/debian/lib/snappy-java-1.1.2.6.jar:$(CURDIR)/debian/lib/xmlenc-0.52.jar:$(CURDIR)/debian/lib/zkclient-0.10.jar

%:
	dh $@ --with javahelper

override_dh_install:
	dh_install
	# make install installs files into debian/tmp.
	# These files are part of the kafka-common package.
	cp -rv $(CURDIR)/debian/tmp/usr/share/kafka/*                $(CURDIR)/debian/kafka-common/usr/share/kafka/

	# These files are part of the kafka-cli package.
	cp -rv $(CURDIR)/debian/tmp/etc/kafka/tools-log4j.properties $(CURDIR)/debian/kafka-cli/etc/kafka/
	cp -rv $(CURDIR)/debian/tmp/etc/kafka/log4j.properties       $(CURDIR)/debian/kafka-cli/etc/kafka/

	# These files are part of the kafka-server package.
	cp -rv $(CURDIR)/debian/tmp/etc/kafka/server.properties      $(CURDIR)/debian/kafka-server/etc/kafka/
	cp -rv $(CURDIR)/debian/tmp/etc/kafka/zookeeper.properties   $(CURDIR)/debian/kafka-server/etc/kafka/

	# These files are part of the kafka-mirror package
	cp -rv $(CURDIR)/debian/tmp/etc/kafka/mirror                 $(CURDIR)/debian/kafka-mirror/etc/kafka/

override_dh_installinit:
	# Install kafka-server.kafka init.d and default scripts under the name 'kafka'.
	dh_installinit --name=kafka --no-start

	# Install kafka-mirror init.d and default scripts under their default name 'kafka-mirror'.
	dh_installinit --no-start
